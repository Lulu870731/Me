//Step1: Define inputs and variables
Inputs:K1(.5),K2(.5),Nday(5);
Vars:HH(0),HC(0),LL(0),LC(0);
Vars:vRange(0);
Vars:vOpen(0),Upperline(0),Buttomline(0);
//Step2
HH=Highest(H,Nday);HC=Highest(C,Nday);LL=Lowest(L,Nday);LC=Lowest(C,Nday);
vRange=maxlist(HH-LC,HC-LL);
//Step3
if T[1]=0500 then vOpen=o;
Upperline=vOpen+K1*vRange;
Buttomline=vOpen+K2*vRange;
if C cross over Upperline then buy next bar at Upperline stop;
if C cross under Buttomline then sellshort next bar at Buttomline stop; 
